<local:TimerBaseControl x:Class="Mocs.Controls.DeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:Mocs.Properties" 
             xmlns:local="clr-namespace:Mocs.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1260">
    <Grid>
        <StackPanel Background="LightGray"  Width="1260">
            <StackPanel Orientation="Horizontal" Margin="10,0" Height="25">
                <TextBlock Text="{x:Static properties:Resources.TITLE_DEVICE}" HorizontalAlignment="Left" TextDecorations="Underline" FontWeight="Bold"  VerticalAlignment="Center"  />
            </StackPanel>
        </StackPanel>
    </Grid>
</local:TimerBaseControl>
