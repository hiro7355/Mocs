<local:MasterBaseControl x:Class="Mocs.Controls.FloorListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:Mocs.Properties" 
             xmlns:local="clr-namespace:Mocs.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10, 10">
                <TextBlock TextDecorations="Underline" Text="{x:Static properties:Resources.BT_FLOOR_LIST}" />
                <ComboBox x:Name="selectBox" IsReadOnly="True"  ItemsSource="{Binding}" SelectedValuePath="hospital_id" SelectionChanged="selectBox_SelectionChanged" SelectedIndex="0" Width="100" Margin="20,0" >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock><Run Text="{Binding hospital_name, Mode=OneWay}" />
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

            </StackPanel>

            <DataGrid Margin="10, 10" Name="floorList" IsReadOnly="True" CanUserSortColumns="False" CanUserReorderColumns="False" ItemsSource="{Binding}" AutoGenerateColumns="False" GridLinesVisibility="Horizontal" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static properties:Resources.FLH_HOSPITAL}" Binding="{Binding hospital}" Width="100"/>
                    <DataGridTextColumn Header="{x:Static properties:Resources.FLH_FLOOR}" Binding="{Binding floor}" Width="100"/>
                    <DataGridTextColumn Header="{x:Static properties:Resources.FLH_MU_ORDER}" Binding="{Binding mu_order}" Width="100"/>
                    <DataGridTextColumn Header="{x:Static properties:Resources.FLH_MU_ERROR}" Binding="{Binding m_error}" Width="100"/>
                    <DataGridTextColumn  Width="100"/>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</local:MasterBaseControl>

