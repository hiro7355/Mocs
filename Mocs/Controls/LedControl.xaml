<UserControl x:Class="Mocs.Controls.LedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mocs.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120"
  x:Name="parent">
        <Border  DataContext="{Binding ElementName=parent}" BorderThickness="1" BorderBrush="Black">
            <StackPanel>
                <Label Content="{Binding DataContext}" />
                <Ellipse Fill="{Binding Foreground}" HorizontalAlignment="Left"
         Margin="20,20,0,0" Stroke="{Binding Foreground}" VerticalAlignment="Top" 
         Height="80" Width="80"/>
            </StackPanel>

        </Border>
</UserControl>
