<UserControl x:Class="Mocs.Controls.LedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mocs.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="120"
  x:Name="parent">
        <Border  DataContext="{Binding ElementName=parent}" BorderThickness="3" BorderBrush="Black">
        <StackPanel Width="134" Height="100" >
            <Label Content="{Binding DataContext}" HorizontalAlignment="Center"   Margin="-15" Background="LightGray"/>
                <Ellipse Fill="{Binding Foreground}" HorizontalAlignment="center"
          Stroke="{Binding Foreground}" VerticalAlignment="Top" 
         Height="60" Width="60" Margin="0,20"/>
            </StackPanel>

        </Border>
</UserControl>
