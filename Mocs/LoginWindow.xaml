<Window x:Class="Mocs.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:properties="clr-namespace:Mocs.Properties" 
        xmlns:local="clr-namespace:Mocs"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.LOGIN_TITLE}" Height="150" Width="300" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="{x:Static properties:Resources.LOGINWINDOW_TITLE}" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
            <PasswordBox  x:Name="textPassword" Focusable="True" TabIndex="0" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

                <Button x:Name="buttonLogin" Content="{x:Static properties:Resources.LOGIN}" Click="buttonLogin_Click" Width="100" IsDefault="True" Margin="5,0"/>
                <Button x:Name="buttonCancel" Content="{x:Static properties:Resources.CANCEL}" Click="buttonCancel_Click"  Width="100" Margin="5,0"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
